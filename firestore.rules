rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Perfis de usuário
    match /users/{userId} {
      // Permitir leitura do próprio perfil ou de qualquer perfil (para mostrar autores)
      allow read: if true;
      
      // Permitir criar perfil apenas para o próprio usuário
      allow create: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.data.keys().hasAll(['uid', 'nickname', 'isGuest', 'createdAt'])
                    && request.resource.data.uid == userId
                    && request.resource.data.nickname is string
                    && request.resource.data.nickname.size() >= 1
                    && request.resource.data.nickname.size() <= 16;
      
      // Permitir atualizar apenas o próprio perfil
      allow update: if request.auth != null 
                    && request.auth.uid == userId;
    }
    
    // Playlists da comunidade
    match /community_playlists/{playlistId} {
      // Permitir leitura para todos
      allow read: if true;
      
      // Permitir criar playlist apenas para usuários autenticados
      allow create: if request.auth != null
                    && request.resource.data.authorId == request.auth.uid
                    && request.resource.data.keys().hasAll(['name', 'description', 'authorId', 'authorNickname', 'scenarios', 'likes', 'dislikes', 'createdAt'])
                    && request.resource.data.name is string
                    && request.resource.data.name.size() >= 3
                    && request.resource.data.scenarios is list
                    && request.resource.data.scenarios.size() > 0;
      
      // Permitir atualizar apenas o próprio playlist OU atualizar contadores de likes/dislikes/plays
      allow update: if request.auth != null && (
                      // Autor pode atualizar tudo
                      request.auth.uid == resource.data.authorId ||
                      // Qualquer um autenticado pode atualizar apenas likes/dislikes/plays
                      (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'dislikes', 'plays', 'updatedAt']))
                    )
                    // OU permitir apenas incremento de plays sem autenticação
                    || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['plays']);
      
      // Permitir deletar apenas o próprio playlist
      allow delete: if request.auth != null
                    && request.auth.uid == resource.data.authorId;
    }
    
    // Likes/dislikes de playlists
    match /playlist_likes/{likeId} {
      // Permitir leitura para todos
      allow read: if true;
      
      // Permitir criar/atualizar apenas o próprio like
      allow create, update: if request.auth != null
                            && request.resource.data.userId == request.auth.uid;
      
      // Permitir deletar apenas o próprio like
      allow delete: if request.auth != null
                    && request.auth.uid == resource.data.userId;
    }
    
    // Registros de plays para tracking de trending
    match /playlist_plays/{playId} {
      // Permitir leitura para todos (para contar trending)
      allow read: if true;
      
      // Permitir criar registro de play (qualquer um pode registrar play)
      allow create: if request.resource.data.keys().hasAll(['playlistId', 'nickname', 'timestamp'])
                    && request.resource.data.playlistId is string
                    && request.resource.data.nickname is string
                    && request.resource.data.timestamp is number;
      
      // Não permitir atualização ou deleção
      allow update, delete: if false;
    }
    
    // Completions de playlists (para contar plays únicos)
    match /playlist_completions/{completionId} {
      // Permitir leitura para todos (para verificar se já completou)
      allow read: if true;
      
      // Permitir criar registro de completion
      allow create: if request.resource.data.keys().hasAll(['playlistId', 'nickname', 'timestamp'])
                    && request.resource.data.playlistId is string
                    && request.resource.data.nickname is string
                    && request.resource.data.timestamp is number;
    }
    
    // Permitir leitura do ranking para todos
    // Permitir escrita apenas com dados válidos
    match /rankings/{rankingId} {
      allow read: if true;
      
      // Criar novo registro
      allow create: if request.resource.data.keys().hasAll(['nickname', 'playlistName', 'time', 'score', 'timestamp'])
                    && request.resource.data.nickname is string
                    && request.resource.data.nickname.size() >= 3
                    && request.resource.data.nickname.size() <= 16
                    && request.resource.data.time is number
                    && request.resource.data.time >= 0
                    && request.resource.data.score is number
                    && request.resource.data.timestamp is number;
      
      // Atualizar registro existente (para atualizar highscore)
      allow update: if request.resource.data.time is number
                    && request.resource.data.time >= 0
                    && request.resource.data.score is number
                    && request.resource.data.timestamp is number;
      
      // Deletar registros duplicados
      allow delete: if true;
    }
    
    // Rankings de playlists da comunidade
    match /community_rankings/{rankingId} {
      allow read: if true;
      
      // Criar novo registro
      allow create: if request.resource.data.keys().hasAll(['nickname', 'playlistName', 'playlistId', 'time', 'score', 'timestamp'])
                    && request.resource.data.nickname is string
                    && request.resource.data.nickname.size() >= 3
                    && request.resource.data.nickname.size() <= 16
                    && request.resource.data.playlistId is string
                    && request.resource.data.time is number
                    && request.resource.data.time >= 0
                    && request.resource.data.score is number
                    && request.resource.data.timestamp is number;
      
      // Atualizar registro existente (para atualizar highscore)
      allow update: if request.resource.data.time is number
                    && request.resource.data.time >= 0
                    && request.resource.data.score is number
                    && request.resource.data.timestamp is number;
      
      // Deletar registros duplicados
      allow delete: if true;
    }
    
    // ==================== REPLAYS ====================
    
    // Replays de playlists oficiais
    match /replays/{replayId} {
      // Permitir leitura para todos (para assistir replays)
      allow read: if true;
      
      // Permitir criar replay (qualquer usuário pode gravar replay)
      allow create: if request.resource.data.keys().hasAll(['playlistName', 'playerNickname', 'totalTime', 'events', 'scenarios', 'recordedAt', 'version'])
                    && request.resource.data.playlistName is string
                    && request.resource.data.playerNickname is string
                    && request.resource.data.totalTime is number
                    && request.resource.data.events is list
                    && request.resource.data.scenarios is list;
      
      // Não permitir atualização de replays
      allow update: if false;
      
      // Permitir deletar apenas para admins (desabilitado por padrão)
      allow delete: if false;
    }
    
    // Replays de playlists da comunidade
    match /community_replays/{replayId} {
      // Permitir leitura para todos (para assistir replays)
      allow read: if true;
      
      // Permitir criar replay (qualquer usuário pode gravar replay)
      allow create: if request.resource.data.keys().hasAll(['playlistId', 'playlistName', 'playerNickname', 'totalTime', 'events', 'scenarios', 'recordedAt', 'version'])
                    && request.resource.data.playlistId is string
                    && request.resource.data.playlistName is string
                    && request.resource.data.playerNickname is string
                    && request.resource.data.totalTime is number
                    && request.resource.data.events is list
                    && request.resource.data.scenarios is list;
      
      // Não permitir atualização de replays
      allow update: if false;
      
      // Permitir deletar apenas para admins (desabilitado por padrão)
      allow delete: if false;
    }
  }
}
