{
  "name": "Treino com Bots",
  "description": "Aprenda a jogar com e contra bots inteligentes",
  "scenarios": [
    {
      "name": "Passe Simples com Bot",
      "map": "default",
      "timeLimit": 20,
      "objectives": [
        {
          "type": "goal",
          "team": "red",
          "scoredBy": "ally-bot-1",
          "timeLimit": 20
        },
        {
          "type": "kick_count",
          "max": 1
        },
        {
          "type": "prevent_touch",
          "preventBotIds": ["enemy-bot-1"]
        }
      ],
      "ballSpawn": { "x": 400, "y": 300 },
      "playerSpawn": { "x": 350, "y": 300 },
      "initialBallVelocity": { "x": 150, "y": 0 },
      "initialPlayerVelocity": { "x": 150, "y": 0 },
      "bots": [
        {
          "id": "ally-bot-1",
          "name": "Aliado",
          "team": "red",
          "spawn": { "x": 700, "y": 150 },
          "behavior": {
            "type": "ai_preset",
            "config": {
              "type": "stay_near",
              "params": {
                "type": "stay_near",
                "position": { "x": 700, "y": 300 },
                "radius": 0,
                "speed": 0,
                "kickWhenBallNear": true,
                "kickDistance": 35
              }
            }
          }
        },
        {
          "id": "enemy-bot-1",
          "name": "Adversário",
          "team": "blue",
          "spawn": { "x": 700, "y": 300 },
          "behavior": {
            "type": "ai_preset",
            "config": {
              "type": "stay_near",
              "params": {
                "type": "stay_near",
                "position": { "x": 700, "y": 300 },
                "radius": 0,
                "speed": 0
              }
            }
          }
        }
      ]
    },
    {
      "name": "Driblando Adversário",
      "map": "default",
      "timeLimit": 7,
      "objectives": [
        {
          "type": "checkpoint",
          "position": { "x": 350, "y": 550 },
          "radius": 15,
          "timeLimit": 3
        },
        {
          "type": "goal",
          "team": "red",
          "timeLimit": 7
        },
        {
          "type": "prevent_touch",
          "preventBotIds": ["enemy-bot-1"]
        },
        {
          "type": "kick_count",
          "max": 2
        }
      ],
      "ballSpawn": { "x": 300, "y": 480 },
      "playerSpawn": { "x": 200, "y": 480 },
      "bots": [
        {
          "id": "enemy-bot-1",
          "name": "Adversário",
          "team": "blue",
          "spawn": { "x": 500, "y": 480 },
          "behavior": {
            "type": "ai_preset",
            "config": {
              "type": "chase_ball",
              "params": {
                "type": "chase_ball",
                "speed": 0.7,
                "reactionTime": 0.2,
                "kickWhenClose": true,
                "kickDistance": 35
              }
            }
          }
        }
      ]
    },
    {
      "name": "Interceptação Avançada",
      "map": "default",
      "timeLimit": 35,
      "objectives": [
        {
          "type": "goal",
          "team": "red",
          "timeLimit": 30
        },
        {
          "type": "prevent_touch",
          "preventBotIds": ["interceptor-bot"]
        }
      ],
      "ballSpawn": { "x": 200, "y": 300 },
      "playerSpawn": { "x": 150, "y": 300 },
      "bots": [
        {
          "id": "receiver-bot",
          "name": "Recebedor",
          "team": "red",
          "spawn": { "x": 750, "y": 300 },
          "behavior": {
            "type": "ai_preset",
            "config": {
              "type": "chase_ball",
              "params": {
                "type": "chase_ball",
                "speed": 0.8,
                "reactionTime": 0.2,
                "kickWhenClose": true,
                "kickDistance": 35,
                "aimAtGoal": true
              }
            }
          }
        },
        {
          "id": "interceptor-bot",
          "name": "Interceptador",
          "team": "blue",
          "spawn": { "x": 450, "y": 200 },
          "behavior": {
            "type": "ai_preset",
            "config": {
              "type": "intercept",
              "params": {
                "type": "intercept",
                "speed": 0.9,
                "predictBallPath": true,
                "stealBall": true
              }
            }
          }
        }
      ]
    }
  ]
}
